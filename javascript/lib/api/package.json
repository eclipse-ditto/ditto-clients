{
  "name": "@eclipse-ditto/ditto-javascript-client-api",
  "version": "3.8.1",
  "description": "API interfaces for implementing TypeScript clients for Eclipse Ditto",
  "author": "Eclipse Ditto committers <ditto-dev@eclipse.org>",
  "repository": "https://github.com/eclipse-ditto/ditto-clients",
  "license": "EPL-2.0",
  "main": "dist/index.js",
  "type": "module",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "restricted"
  },
  "private": true,
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@jest/globals": "26.6.2",
    "@types/jest": "^26.0.24",
    "@types/prettier": "<2.6.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "barrelsby": "^2.1.1",
    "eslint": "^8.57.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "jest": "^26.6.3",
    "ts-jest": "^26.5.6",
    "typescript": "^4.9.5"
  },
  "scripts": {
    "build": "npm run build:tsc && npm run build:barrels",
    "build:tsc": "tsc -p tsconfig.json",
    "build:barrels": "npm run build:barrels:generate-sources && npm run build:barrels:copyright-header && npm run build:barrels:compile",
    "build:barrels:generate-sources": "barrelsby --config barrelsby.json",
    "build:barrels:copyright-header": "eslint --config .eslintrc.cjs --fix dist/index.ts",
    "build:barrels:compile": "tsc --project tsconfig-barrels.json",
    "lint": "eslint 'src/**/*.{ts,tsx}' ",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "ditto",
    "eclipse",
    "eclipseditto",
    "client",
    "iot",
    "api"
  ]
}
